<% book_comments.each do |book_comment| %>
  <tr id="comment-<%= book_comment.id %>">
    <td>
      <%= link_to user_path(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image, size:'40x40' %><br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
    <% if current_user == book_comment.user %>
      <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
    <% end %>
  </tr>
<% end %>